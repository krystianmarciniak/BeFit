@model BeFit.Models.TrainingSession
@{
    ViewData["Title"] = "Nowa sesja";
}
<h1 class="display-6 fw-bold mb-4">@ViewData["Title"]</h1>

<form asp-action="Delete" method="post" class="row gy-3" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-12 col-md-4">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="col-12 col-md-4">
        <label asp-for="DurationMinutes" class="form-label"></label>
        <input asp-for="DurationMinutes" class="form-control" />
        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
