@model BeFit.Models.PerformedExercise
@{
    ViewData["Title"] = "Edytuj ćwiczenie";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
  <input type="hidden" asp-for="Id" />

  <div class="mb-3">
    <label class="form-label" asp-for="TrainingSessionId">Sesja</label>
    <select class="form-select" asp-for="TrainingSessionId" asp-items="ViewBag.TrainingSessionId"></select>
    <span class="text-danger" asp-validation-for="TrainingSessionId"></span>
  </div>

  <div class="mb-3">
    <label class="form-label" asp-for="ExerciseTypeId">Typ ćwiczenia</label>
    <select class="form-select" asp-for="ExerciseTypeId" asp-items="ViewBag.ExerciseTypeId"></select>
    <span class="text-danger" asp-validation-for="ExerciseTypeId"></span>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <label asp-for="Sets" class="form-label"></label>
      <input asp-for="Sets" class="form-control" />
      <span class="text-danger" asp-validation-for="Sets"></span>
    </div>
    <div class="col-md-4 mb-3">
      <label asp-for="Reps" class="form-label"></label>
      <input asp-for="Reps" class="form-control" />
      <span class="text-danger" asp-validation-for="Reps"></span>
    </div>
    <div class="col-md-4 mb-3">
      <label asp-for="WeightKg" class="form-label"></label>
      <input asp-for="WeightKg" class="form-control" />
      <span class="text-danger" asp-validation-for="WeightKg"></span>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Zapisz</button>
  <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
