@model BeFit.ViewModels.PerformedExerciseIndexVm
@{
    ViewData["Title"] = "Wykonane ćwiczenia";
}

<h1>Wykonane ćwiczenia</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ćwiczenie</th>
            <th>Sesja</th>
            <th>Serie</th>
            <th>Powt.</th>
            <th>Waga [kg]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.ExerciseType?.Name</td>
            <td>@item.TrainingSession?.SessionDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.Sets</td>
            <td>@item.Reps</td>
            <td>@item.WeightKg</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>
