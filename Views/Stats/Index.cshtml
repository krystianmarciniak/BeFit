@model IEnumerable<BeFit.ViewModels.StatsVm>
@{
    ViewData["Title"] = "Statystyki (Admin)";
}

<h2 class="mb-3">Statystyki globalne (28 dni)</h2>
<p class="text-muted">Zgrupowane wg rodzaju ćwiczenia.</p>

<div class="table-responsive">
<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Rodzaj ćwiczenia</th>
            <th class="text-end">Sesje</th>
            <th class="text-end">Serie (∑)</th>
            <th class="text-end">Powtórzenia (∑)</th>
            <th class="text-end">Wolumen (kg)</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.ExerciseTypeName</td>
            <td class="text-end">@r.SessionsCount</td>
            <td class="text-end">@r.TotalSets</td>
            <td class="text-end">@r.TotalReps</td>
            <td class="text-end">@r.TotalWeight.ToString("N0")</td>
        </tr>
    }
    </tbody>
</table>
</div>
